{
  "manifest_version": 3,
  "name": "Twitter Video Download",
  "description": "Extension for downloading Twitter videos",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },  
  "icons": {
    "128": "logo-color.png"
  },
  "permissions":  [
    "storage",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "web_accessible_resources": [{
    "resources": ["content.js"],
    "matches": ["https://twitter.com/*"]
  }]
}